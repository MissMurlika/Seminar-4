// Задача 25: Напишите цикл, который принимает на вход два числа (A и B)
//и возводит число A в натуральную степень B.
// 3, 5 -> 243 (3⁵)
// 2, 4 -> 16

// 1 вариант решения

Console.WriteLine("Доброго времени суток!");
Console.WriteLine($"\nЗадача 25. Возведене числа A в натуральную степень B");

int Exponentiation(int numberA, int numberB){
  int result = 1;
  for(int i=1; i <= numberB; i++){
    result = result * numberA;
  }
    // int result = Math.Pow(numberA, numberB);
    return result;
}

  Console.Write("Введите число A, нажмите ввод(enter)");
  int numberA = Convert.ToInt32(Console.ReadLine());
  Console.Write("Введите число B, нажмите ввод(enter) ");
  int numberB = Convert.ToInt32(Console.ReadLine());

  int exponentiation = Exponentiation(numberA, numberB);
  Console.WriteLine("Ответ: " + exponentiation);
  
  
  // 2 вариант решения
  Console.WriteLine("Доброго времени суток!");
   Console.WriteLine("Задача 25");
  
  Console.WriteLine("введите число A, нажмите ввод(enter)");
int a = Convert.ToInt32(Console.ReadLine());
Console.WriteLine("введите число B, нажмите ввод(enter)");
int b = Convert.ToInt32(Console.ReadLine());
int step = a;

for (int i = 1; i < b; i++)
{
step = step * a;
}
Console.WriteLine("A в степени B равно: " + step);
  
  
